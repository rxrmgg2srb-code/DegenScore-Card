# ⚠️ CRITICAL: Copy this file to .env.local and fill in your REAL credentials
# NEVER commit .env.local to git (it's in .gitignore)
# Generate secure secrets: openssl rand -base64 48

# =============================================================================
# DATABASE (REQUIRED)
# =============================================================================
# Get from Supabase: Settings > Database > Connection String
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true"

# =============================================================================
# SOLANA RPC (REQUIRED)
# =============================================================================
# Get free API key from: https://www.helius.dev
HELIUS_API_KEY="your-helius-api-key-here"
HELIUS_RPC_URL="https://mainnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}"

# =============================================================================
# TREASURY WALLET (REQUIRED)
# =============================================================================
# Your Solana wallet address that will receive payments
TREASURY_WALLET="YourSolanaWalletAddressHere"
NEXT_PUBLIC_TREASURY_WALLET="${TREASURY_WALLET}"

# =============================================================================
# APPLICATION CONFIG (REQUIRED)
# =============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SOLANA_NETWORK="mainnet-beta"
NEXT_PUBLIC_HELIUS_RPC_URL="https://api.mainnet-beta.solana.com"

# =============================================================================
# SECURITY (REQUIRED)
# =============================================================================
# Generate with: openssl rand -base64 48
JWT_SECRET="your-64-character-random-secret-here-minimum-48-chars"

# Generate with: openssl rand -hex 32
CRON_API_KEY="your-secure-cron-api-key-here"

# Comma-separated list of admin wallet addresses
ADMIN_WALLETS="AdminWallet1,AdminWallet2,AdminWallet3"

# =============================================================================
# OPTIONAL SERVICES (Recommended for production)
# =============================================================================

# Upstash Redis (free tier: https://upstash.com)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Cloudflare R2 for image storage (free tier: 10GB)
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="degenscore-cards"

# Pusher for real-time updates (free tier: 200k messages/day)
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="us2"
NEXT_PUBLIC_PUSHER_KEY="${PUSHER_KEY}"
NEXT_PUBLIC_PUSHER_CLUSTER="${PUSHER_CLUSTER}"

# Sentry for error tracking (free tier available)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN="${SENTRY_DSN}"

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=""

# Telegram bot for notifications
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHANNEL_ID=""

# =============================================================================
# PRICING & FEATURES
# =============================================================================
# Premium tier price: 0.2 SOL (~$20 USD at $100/SOL)
NEXT_PUBLIC_MINT_PRICE_SOL="0.2"
NEXT_PUBLIC_REFERRAL_REWARD_SOL="0.1"
NEXT_PUBLIC_MAX_PREMIUM_SLOTS="1000"
