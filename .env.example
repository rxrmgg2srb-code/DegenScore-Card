# Database
DATABASE_URL="postgresql://user:password@host:port/database?pgbouncer=true"

# Helius API (get from: https://www.helius.dev/)
HELIUS_API_KEY="your-helius-api-key-here"
HELIUS_RPC_URL="https://mainnet.helius-rpc.com/?api-key=your-helius-api-key-here"

# Treasury Wallet (your Solana wallet for receiving payments)
TREASURY_WALLET="your-treasury-wallet-public-key"
NEXT_PUBLIC_TREASURY_WALLET="your-treasury-wallet-public-key"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SOLANA_NETWORK="devnet"  # or "mainnet-beta"
NEXT_PUBLIC_HELIUS_RPC_URL="https://api.devnet.solana.com"

# Cron Job API Key (for scheduled tasks)
CRON_API_KEY="your-cron-api-key-here"

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-minimum-32-characters"

# Admin Configuration (comma-separated wallet addresses)
ADMIN_WALLETS="admin-wallet-1,admin-wallet-2"

# Discord Webhook (optional, for community notifications)
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your-webhook-url"

# Telegram Bot (optional, for notifications)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHANNEL_ID="your-telegram-channel-id"
